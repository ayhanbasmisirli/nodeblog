extends layout

block content
	if posts
		each post , i in posts
			.post
				h1
					a(href='/post/show/#{post._id}')=post.title
				p.meta Posted in #{post.category} by #{post.author} on #{moment(post.date).format("DD-MM-YYYY")}
				img(src='/images/uploads/#{post.mainimage}')
				!=post.body
				a.more(href='/post/show/#{post._id}') Read More
	else
		h1 there isnt any post to display


